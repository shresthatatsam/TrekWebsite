@model UserRoles.Dtos.ResponseDtos.AboutUsResponseDto

@{
    ViewData["Title"] = Model.Id == null ? "Create About Us" : "Edit About Us";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" asp-controller="AboutUs" method="post" enctype="multipart/form-data">
                @if (Model.Id != null)
                {
                    <input type="hidden" asp-for="Id" />
                }

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter title" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Mission" class="form-label fw-semibold">Mission</label>
                    <textarea asp-for="Mission" class="form-control" rows="3" placeholder="Enter mission statement"></textarea>
                    <span asp-validation-for="Mission" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Story" class="form-label fw-semibold">Story</label>
                    <textarea asp-for="Story" class="form-control" rows="4" placeholder="Write your story..."></textarea>
                    <span asp-validation-for="Story" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Current Image</label><br />
                    <img src="@Model.ImageUrl" alt="carousel image" width="200" />
                </div>

                <div class="mb-3">
                    <label for="ImageFile" class="form-label">Replace Image</label>
                    <input type="file" name="ImageFile" id="ImageFile" class="form-control" accept="image/*" />
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success w-100 py-2 rounded-pill">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
