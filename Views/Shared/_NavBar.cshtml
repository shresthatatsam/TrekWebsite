@*     @using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using UserRoles.Services.Interface
@inject ITrekAppService _trekPackageService
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Rendering
    @inject SignInManager<Users> signInManager
    @inject IHttpContextAccessor HttpContextAccessor

@{
    var trekSlugs = await _trekPackageService.GetallSlug();
}
@{
    string currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    string currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    string currentPath = HttpContextAccessor.HttpContext?.Request.Path.ToString().ToLower();
}
@inject UserRoles.Data.AppDbContext _context

@{
    var contentNavBar = _context.NavBarContents
                               .Include(n => n.Items)
                               .ToList();

    var isActive = currentPath.Contains("/NabBarContent");
    var liClass = "nav-item dropdown" + (isActive ? " active" : "");
}



<style>

    /* Show dropdown menu on hover */
    .nav-item.dropdown:hover > .dropdown-menu {
        display: block;
        margin-top: 0;
    }

    /* Show submenu on hover */
    .dropdown-submenu:hover > .dropdown-menu {
        display: block;
        top: 0;
        left: 100%; /* submenu opens to the right */
        margin-left: 0;
    }

    /* Positioning submenu relative to parent */
    .dropdown-submenu {
        position: relative;
    }

        /* Optional arrow indicator on submenu links */
        .dropdown-submenu > a::after {
            content: "▶";
            float: right;
            margin-left: 0.5rem;
            font-size: 0.8em;
        }


    nav.navbar {
        position: fixed;
        width: 100%;
        z-index: 3000;
        background: rgba(0, 0, 0, 0.75);
        padding: 0.5rem 1rem;
    }

    .navbar-brand, .navbar-nav .nav-link {
        color: #ffffff !important;
        font-weight: 600;
        transition: color 0.3s ease;
    }

        .navbar-brand:hover, .navbar-nav .nav-link:hover {
            color: #00d1b2 !important; /* teal accent */
        }

    .navbar-toggler {
        border-color: #00d1b2;
    }

    .navbar-toggler-icon {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='%23fff' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
    }

    .nav-item.active .nav-link {
        color: #00d1b2 !important;
        border-bottom: 2px solid #00d1b2;
    }

</style>
<header>



    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">TREK</a>
            <button class="navbar-toggler" type="button" data-mdb-toggle="collapse" data-mdb-target="#navbarExample01"
                    aria-controls="navbarExample01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarExample01">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">


                    <li class="nav-item @(currentPath == "/" ? "active" : "")">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item @(currentPath.Contains("/aboutus") ? "active" : "")">
                        <a class="nav-link" asp-controller="AboutUs" asp-action="Index">About</a>
                    </li>

                    <li class="nav-item dropdown @(currentPath.Contains("/NabBarContent") ? "active" : "")">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownAbout" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            NavBarContent
                        </a>

                        @if (contentNavBar != null && contentNavBar.Any())
                        {
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownAbout">
                                @foreach (var menu in contentNavBar)
                                {
                                    if (menu != null)
                                    {
                                        <li class="dropdown-submenu">
                                            <a class="dropdown-item dropdown-toggle" href="#" id="navbarDropdown-@menu.MainHeading.Replace(" ", "")" role="button"
                                               aria-expanded="false">
                                                @menu.MainHeading
                                            </a>
                                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown-@menu.MainHeading.Replace(" ", "")">
                                                @foreach (var item in menu.Items)
                                                {
                                                    <li>
                                                        <a class="dropdown-item" href="@item.Url">@item.Title</a>
                                                    </li>
                                                }
                                            </ul>
                                        </li>
                                    }
                                }
                            </ul>
                        }
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="trekDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            TrekPackages
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="trekDropdown">
                            @if (trekSlugs == null || !trekSlugs.Any())
                            {
                                <li><span class="dropdown-item text-danger">No slugs found</span></li>
                            }
                            else
                            {
                                foreach (var slug in trekSlugs)
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="TrekPackage" asp-action="Details" asp-route-slug="@slug">
                                            @slug
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </li>

                <li class="nav-item @(currentPath.Contains("/blog") ? "active" : "")">
                    <a class="nav-link" href="/blog">Blog</a>
                </li>
                </ul>

                <ul class="navbar-nav ml-auto mb-2 mb-lg-0">
                    @if (signInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-link nav-link text-white p-0">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item @(currentPath.Contains("/account/login") ? "active" : "")">
                            <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item @(currentPath.Contains("/account/register") ? "active" : "")">
                            <a class="nav-link text-white" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>


</header> *@