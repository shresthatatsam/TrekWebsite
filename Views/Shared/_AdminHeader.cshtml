            Carousel
        </a>
        <div class="collapse @(currentPath.StartsWith("/Carousal") ? "show" : "")" id="carousalMenu">
            <ul class="list-unstyled ps-3">
                <li><a class="@(currentPath == "/Carousal/Create" ? "active" : "")" asp-controller="Carousal" asp-action="Create">Create Carousel</a></li>
                <li><a class="@(currentPath == "/Carousal/Index" ? "active" : "")" asp-controller="Carousal" asp-action="Index">List Carousel</a></li>
            </ul>
        </div>
    </div>

    <!-- About Us Dropdown -->
