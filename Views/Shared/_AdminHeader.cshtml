        <a class="dropdown-toggle @(currentPath.StartsWith("/NabBarContent") ? "active" : "")" data-bs-toggle="collapse" href="#NabBarContentMenu" role="button" aria-expanded="false" aria-controls="NabBarContentMenu">
            PageContent
        </a>
        <div class="collapse @(currentPath.StartsWith("/NabBarContent") ? "show" : "")" id="NabBarContentMenu">
            <ul class="list-unstyled ps-3">
                <li><a class="@(currentPath == "/NabBarContent/Create" ? "active" : "")" asp-controller="NabBarContent" asp-action="Create">Create Nav Content</a></li>
                <li><a class="@(currentPath == "/NabBarContent/Index" ? "active" : "")" asp-controller="NabBarContent" asp-action="Index">List PageContent</a></li>
            </ul>
        </div>
    </div>


      <div class="dropdown">
        <a class="dropdown-toggle @(currentPath.StartsWith("/TrekContent") ? "active" : "")" data-bs-toggle="collapse" href="#TrekContentMenu" role="button" aria-expanded="false" aria-controls="TrekContentMenu">
            Trek Package Content
        </a>
        <div class="collapse @(currentPath.StartsWith("/TrekContent") ? "show" : "")" id="TrekContentMenu">
            <ul class="list-unstyled ps-3">
                <li><a class="@(currentPath == "/TrekContent/Create" ? "active" : "")" asp-controller="TrekContent" asp-action="Create">Treks Package Content</a></li>
                <li><a class="@(currentPath == "/TrekContent/Index" ? "active" : "")" asp-controller="TrekContent" asp-action="Index">List PageContent</a></li>
            </ul>
        </div>
    </div>

    <hr />

    @if (signInManager.IsSignedIn(User))
    {
        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="sidebar-link">Logout</button>
        </form>
    }
    else
    {
        <a class="@(currentPath == "/account/login" ? "active" : "")" asp-controller="Account" asp-action="Login">Login</a>
        <a class="@(currentPath == "/account/register" ? "active" : "")" asp-controller="Account" asp-action="Register">Register</a>
    }
</div>

<!-- Toggle Script -->
<script>
    function toggleSidebar() {
        document.getElementById("sidebar").classList.toggle("active");
    }
</script>
