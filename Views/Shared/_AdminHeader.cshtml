@* @using Microsoft.AspNetCore.Identity
@inject SignInManager<Users> signInManager
@inject IHttpContextAccessor HttpContextAccessor

@{
    var currentPath = HttpContextAccessor.HttpContext?.Request.Path.Value?.ToLower() ?? "";
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .wrapper {
        display: flex;
        height: 100vh;
    }

    .sidebar {
        width: 240px;
        background-color: #1e1e2f;
        color: #fff;
        padding: 1.5rem 1rem;
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        overflow-y: auto;
        transition: all 0.3s ease;
        z-index: 1000;
    }

    .sidebar h5 {
        color: #00d1b2;
        margin-bottom: 1rem;
    }

    .sidebar a {
        display: block;
        color: #ccc;
        padding: 0.5rem 1rem;
        margin: 0.3rem 0;
        text-decoration: none;
        border-radius: 5px;
        font-weight: 500;
    }

    .sidebar a:hover,
    .sidebar a.active {
        background-color: #00d1b2;
        color: #fff;
    }

    .sidebar form {
        margin-top: 1rem;
    }

    .sidebar .btn-link {
        color: #ccc;
        text-decoration: none;
    }

    .sidebar .btn-link:hover {
        color: #fff;
    }

    .content {
        margin-left: 240px;
        padding: 2rem;
        transition: margin-left 0.3s ease;
        width: 100%;
    }

    /* Toggle Button (Mobile) */
    .toggle-sidebar-btn {
        display: none;
        position: fixed;
        top: 1rem;
        left: 1rem;
        background-color: #00d1b2;
        border: none;
        color: white;
        padding: 0.5rem 1rem;
        font-size: 1.2rem;
        border-radius: 5px;
        z-index: 1100;
    }

    .sidebar-link {
        background: none;
        border: none;
        color: #ccc;
        padding: 0.5rem 1rem;
        margin: 0.3rem 0;
        text-align: left;
        width: 100%;
        display: block;
        text-decoration: none;
        font-weight: 500;
        cursor: pointer;
        border-radius: 5px;
    }

        .sidebar-link:hover {
            background-color: #00d1b2;
            color: #fff;
        }


    media (max-width: 768px) {
        .sidebar {
            transform: translateX(-100%);
        }

        .sidebar.active {
            transform: translateX(0);
        }

        .content {
            margin-left: 0;
        }

        .toggle-sidebar-btn {
            display: inline-block;
        }
    }
</style>

<!-- Sidebar Toggle Button -->
<button class="toggle-sidebar-btn" onclick="toggleSidebar()">☰</button>

<!-- Sidebar -->
<div id="sidebar" class="sidebar">
