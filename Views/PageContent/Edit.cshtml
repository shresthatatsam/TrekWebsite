@model UserRoles.Dtos.ResponseDtos.PageContentResponseDto

@{
    ViewData["Title"] = "Edit Page Content";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" asp-controller="PageContent" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="ContentType" class="form-label">Content Type</label>
        <select asp-for="ContentType" class="form-control" asp-items="Html.GetEnumSelectList<PageContentTypeEnum>()">
            <option value="">-- Select Content Type --</option>
        </select>
        <span asp-validation-for="ContentType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SubTitle" class="form-label">Subtitle</label>
        <input asp-for="SubTitle" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label">Image</label>
        <input asp-for="ImageUrl" type="file" class="form-control" accept="image/*" />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="mt-2">
                <p>Current Image:</p>
                <img src="@Model.ImageUrl" alt="Current Image" style="max-height: 150px;" />
            </div>
        }
    </div>

    <div class="mb-3">
        <label asp-for="FileUrl" class="form-label">Upload File (e.g. PDF)</label>
        <input asp-for="FileUrl" type="file" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.FileUrl))
        {
            <div class="mt-2">
                <p>Current File: <a href="@Model.FileUrl" target="_blank">View</a></p>
            </div>
        }
    </div>

    <div class="mb-3">
        <label asp-for="DisplayOrder" class="form-label">Display Order</label>
        <input asp-for="DisplayOrder" type="number" class="form-control" />
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsPublished" class="form-check-input" />
        <label asp-for="IsPublished" class="form-check-label">Published</label>
    </div>

    <div class="mb-3">
        <label asp-for="Slug" class="form-label">Slug</label>
        <input asp-for="Slug" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="MetaTitle" class="form-label">Meta Title</label>
        <input asp-for="MetaTitle" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="MetaDescription" class="form-label">Meta Description</label>
        <textarea asp-for="MetaDescription" class="form-control" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" asp-controller="PageContent" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
