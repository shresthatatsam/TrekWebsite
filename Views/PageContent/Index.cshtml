@model IEnumerable<PageContent>

@{
    string selectedType = ViewBag.ContentTypeFilter?.ToString();
}


<h2>Page Contents</h2>

<form method="get" class="mb-3 d-flex gap-2 align-items-center">
    <label>Type:</label>
   

    <select name="contentTypeFilter" class="form-select" style="width: 200px;">
        <option value="">-- All --</option>
        @foreach (var type in ViewBag.ContentTypes as string[])
        {
            <option value="@type" selected="@(type == selectedType ? "selected" : null)">@type</option>
        }
    </select>

    <label>Published:</label>
    <select name="isPublishedFilter" class="form-select" style="width: 120px;">
        <option value="">-- All --</option>
        <option value="true" selected="@(ViewBag.IsPublishedFilter == true ? "selected" : null)">Yes</option>
        <option value="false" selected="@(ViewBag.IsPublishedFilter == false ? "selected" : null)">No</option>
    </select>

    <button type="submit" class="btn btn-primary">Filter</button>
    <a asp-action="Index" class="btn btn-secondary">Reset</a>
</form>

<a asp-action="Create" class="btn btn-success mb-2">Add New</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Type</th>
            <th>Title</th>
            <th>Published</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ContentType</td>
                <td>@item.Title</td>
                <td>@(item.IsPublished ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
